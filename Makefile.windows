CC := x86_64-w64-mingw32-gcc
TARGET := runner

SOURCES := main.c log.c netsock.c
OBJECTS := $(SOURCES:.c=.o)

CFLAGS := -g -Wall -Wextra -std=c99 -D_DEFAULT_SOURCE -D_LOG_NO_COLOR
LIB := -lws2_32
LDFLAGS :=

$(TARGET): $(OBJECTS)
	$(CC) $^ -o $@ $(LIB)

%.o: %.c
	$(CC) $(CFLAGS) $(LDFLAGS) -c -o $@ $<

clean:
	rm -rf $(TARGET) $(OBJECTS)
